<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">secommblog_index_form.hiensecomm_secomm_post_listing_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="HienSecomm\Secomm\Block\Adminhtml\Index\Edit\SaveButton"/>
            <button name="reset" class="HienSecomm\Secomm\Block\Adminhtml\Index\Edit\ResetButton"/>
            <button name="back" class="HienSecomm\Secomm\Block\Adminhtml\Index\Edit\BackButton"/>
        </buttons>
        <namespace>secommblog_index_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>secommblog_index_form.hiensecomm_secomm_post_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="hiensecomm_secomm_post_listing_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="secommblog/index/save"/>
        </settings>
        <dataProvider class="HienSecomm\Secomm\Model\Post\DataProvider" name="hiensecomm_secomm_post_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="post">
        <settings>
            <label/>
        </settings>

        <field name="entity_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                    <item name="dataScope" xsi:type="string">id.entity_id</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>

        <!-- This field has data type 'text' and standard 'input' form element and looks like input -->
        <field name="title" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>id.title</dataScope>
            </settings>
        </field>
        <field name="feature_image" formElement="imageUploader">
            <settings>
                <label translate="true">Image Uploader</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">secommblog/index/upload</param>
                        </uploaderConfig>
                        <dataScope>id.feature_image</dataScope>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="content" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <label/>
                <dataScope>id.content</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
</form>
